<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterStockTvTxt"
        android:id="@+id/enterTV"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginStart="26dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/enterTV"
        android:layout_marginTop="21dp" />

    <Button
        android:text="@string/goButtonTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginEnd="47dp"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/symbolTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/enterTV"
        android:layout_marginTop="52dp"
        android:id="@+id/symbolTV" />

    <TextView
        android:text="@string/lastTradePriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltpTV"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nameTV" />

    <TextView
        android:text="@string/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTV"
        android:layout_below="@+id/symbolTV"
        android:layout_alignStart="@+id/symbolTV"
        android:layout_marginTop="41dp" />

    <TextView
        android:text="@string/lastTradeTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/symbolTV"
        android:layout_alignEnd="@+id/changeTV"
        android:id="@+id/lttTV" />

    <TextView
        android:text="@string/weekRangeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekTV"
        android:layout_alignBaseline="@+id/ltpTV"
        android:layout_alignBottom="@+id/ltpTV"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:text="@string/changeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeTV"
        android:layout_alignBaseline="@+id/nameTV"
        android:layout_alignBottom="@+id/nameTV"
        android:layout_alignEnd="@+id/weekTV" />


</RelativeLayout>